{% extends 'base.html.twig' %}

{% block title %}Foire aux Questions{% endblock %}

{% block content_right %}
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <h1 class="h3 mb-4">Foire aux Questions</h1>

                {% if items is not empty %}
                    <div class="accordion" id="faqAccordion">
                        {% for item in items %}
                            <div class="card">
                                <div class="card-header" id="heading{{ loop.index }}">
                                    <h2 class="mb-0">
                                        <button class="btn btn-link btn-block text-left {% if not loop.first %}collapsed{% endif %}" type="button"
                                                data-toggle="collapse"
                                                data-target="#collapse{{ loop.index }}"
                                                aria-expanded="{{ loop.first ? 'true' : 'false' }}"
                                                aria-controls="collapse{{ loop.index }}">
                                            {{ item.question }}
                                        </button>
                                    </h2>
                                </div>

                                <div id="collapse{{ loop.index }}"
                                     class="collapse {% if loop.first %}show{% endif %}"
                                     aria-labelledby="heading{{ loop.index }}"
                                     data-parent="#faqAccordion">
                                    <div class="card-body">
                                        {{ item.answer|raw }}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="bg-white p-4 rounded shadow-sm">
                        <p>
                            Aucune question n'a encore été définie. Revenez un peu plus tard ou contactez-nous via le formulaire de contact
                            pour toute demande d'information.
                        </p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
