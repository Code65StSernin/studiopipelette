{% extends 'base.html.twig' %}

{% block title %}Accès Caisse - Code PIN{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0"><i class="fas fa-lock me-2"></i>Accès Caisse</h4>
                </div>
                <div class="card-body">
                    {% if error %}
                        <div class="alert alert-danger text-center">{{ error }}</div>
                    {% endif %}

                    <form method="post" id="pinForm">
                        <div class="form-group mb-4">
                            <label for="pin" class="form-label text-center w-100">Entrez le code PIN</label>
                            <input type="password" name="pin" id="pin" class="form-control form-control-lg text-center" maxlength="4" autocomplete="off" autofocus required readonly style="letter-spacing: 5px; font-size: 2rem;">
                        </div>

                        <div class="row g-2 mb-3">
                            {% for i in 1..9 %}
                                <div class="col-4">
                                    <button type="button" class="btn btn-outline-secondary btn-lg w-100 py-3 mb-2" onclick="appendPin('{{ i }}')">{{ i }}</button>
                                </div>
                            {% endfor %}
                            <div class="col-4">
                                <button type="button" class="btn btn-outline-danger btn-lg w-100 py-3" onclick="clearPin()"><i class="fas fa-backspace"></i></button>
                            </div>
                            <div class="col-4">
                                <button type="button" class="btn btn-outline-secondary btn-lg w-100 py-3" onclick="appendPin('0')">0</button>
                            </div>
                            <div class="col-4">
                                <button type="submit" class="btn btn-primary btn-lg w-100 py-3"><i class="fas fa-check"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function appendPin(num) {
        const pinInput = document.getElementById('pin');
        if (pinInput.value.length < 4) {
            pinInput.value += num;
        }
        // Auto submit if length is 4
        if (pinInput.value.length === 4) {
             // Optional: submit immediately
             // document.getElementById('pinForm').submit();
        }
    }

    function clearPin() {
        document.getElementById('pin').value = '';
    }
</script>
{% endblock %}
