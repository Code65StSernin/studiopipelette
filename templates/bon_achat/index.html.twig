{% extends 'caisse/layout.html.twig' %}

{% block title %}Gestion des Bons d'Achat{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Bons d'Achat</h1>
        <a href="{{ path('app_bon_achat_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Nouveau Bon d'Achat
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Client</th>
                            <th>Date Création</th>
                            <th>Date Expiration</th>
                            <th>Montant Initial</th>
                            <th>Montant Restant</th>
                            <th>État</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for bon in bons %}
                            <tr>
                                <td class="font-monospace">{{ bon.code }}</td>
                                <td>
                                    {% if bon.client %}
                                        {{ bon.client.nom|upper }} {{ bon.client.prenom|capitalize }}
                                    {% else %}
                                        <span class="text-muted">N/A</span>
                                    {% endif %}
                                </td>
                                <td>{{ bon.dateCreation|date('d/m/Y H:i') }}</td>
                                <td>{{ bon.dateExpiration|date('d/m/Y') }}</td>
                                <td>{{ bon.montantInitial }} €</td>
                                <td class="fw-bold">{{ bon.montantRestant }} €</td>
                                <td>
                                    {% if bon.isValide %}
                                        <span class="badge bg-success">Valide</span>
                                    {% else %}
                                        <span class="badge bg-danger">Expiré / Épuisé</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('app_bon_achat_print', {'id': bon.id}) }}" target="_blank" class="btn btn-sm btn-info text-white" title="Imprimer">
                                        <i class="fas fa-print"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8" class="text-center text-muted">Aucun bon d'achat trouvé.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {% if pagesCount > 1 %}
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        {% for i in 1..pagesCount %}
                            <li class="page-item {% if i == currentPage %}active{% endif %}">
                                <a class="page-link" href="{{ path('app_bon_achat_index', {'page': i}) }}">{{ i }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </nav>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
