{% extends 'caisse/layout.html.twig' %}

{% block title %}Liste des réservations{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Liste des réservations</h1>
        <a href="{{ path('app_caisse_reservation_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvelle réservation
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 mb-4">
                <div class="col-md-4">
                    <div class="input-group">
                        <input type="text" name="q" class="form-control" placeholder="Rechercher par nom ou email..." value="{{ app.request.query.get('q') }}">
                        <button class="btn btn-outline-secondary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Date de début</th>
                            <th>Date de fin</th>
                            <th>Client</th>
                            <th>Email</th>
                            <th>Téléphone</th>
                            <th>Total</th>
                            <th>Statut</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for reservation in reservations %}
                        <tr>
                            <td>{{ reservation.id }}</td>
                            <td>{{ reservation.dateStart ? reservation.dateStart|date('d/m/Y H:i') : '' }}</td>
                            <td>{{ reservation.dateEnd ? reservation.dateEnd|date('d/m/Y H:i') : '' }}</td>
                            <td>{{ reservation.clientName }}</td>
                            <td>{{ reservation.clientEmail }}</td>
                            <td>{{ reservation.clientPhone }}</td>
                            <td>{{ reservation.totalPrice|number_format(2, ',', ' ') }} €</td>
                            <td>
                                {% if reservation.status == 'confirmed' %}
                                    <span class="badge bg-primary">Confirmé</span>
                                {% elseif reservation.status == 'paid' %}
                                    <span class="badge bg-success">Payé</span>
                                {% elseif reservation.status == 'cancelled' %}
                                    <span class="badge bg-danger">Annulé</span>
                                {% elseif reservation.status == 'missed' %}
                                    <span class="badge bg-warning text-dark">Lapin</span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ reservation.status }}</span>
                                {% endif %}
                            </td>
                            <td class="text-end">
                                <a href="{{ path('app_caisse_reservation_edit', {'id': reservation.id}) }}" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9" class="text-center">Aucune réservation trouvée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-center">
                {{ knp_pagination_render(reservations) }}
            </div>
        </div>
    </div>
{% endblock %}
