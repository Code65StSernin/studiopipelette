{{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Informations Client</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        {{ form_row(form.clientName) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.clientEmail) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.clientPhone) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Détails Réservation</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.dateStart) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.dateEnd) }}
                        </div>
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.prestations) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.totalPrice) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a href="{{ path('app_caisse_reservation_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
        <button class="btn btn-primary">
            <i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}
        </button>
    </div>
{{ form_end(form) }}
