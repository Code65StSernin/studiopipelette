{% extends 'caisse/layout.html.twig' %}

{% block title %}Codes Promo{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center gap-3">
            <h1 class="mb-0">Codes Promo</h1>
            <form action="{{ path('app_caisse_code_index') }}" method="get" class="d-flex">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Rechercher...">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
        <a href="{{ path('app_caisse_code_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouveau code
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Code</th>
                        <th>Remise</th>
                        <th>Début</th>
                        <th>Fin</th>
                        <th>Unique</th>
                        <th>1ère Cde</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for code in codes %}
                    <tr>
                        <td class="align-middle fw-bold">{{ code.code }}</td>
                        <td class="align-middle">{{ code.pourcentageRemise }} %</td>
                        <td class="align-middle">{{ code.dateDebut|date('d/m/Y') }}</td>
                        <td class="align-middle">{{ code.dateFin|date('d/m/Y') }}</td>
                        <td class="align-middle">
                            {% if code.usageUnique %}
                                <i class="fas fa-check text-success"></i>
                            {% else %}
                                <i class="fas fa-times text-muted"></i>
                            {% endif %}
                        </td>
                        <td class="align-middle">
                            {% if code.premiereCommandeSeulement %}
                                <i class="fas fa-check text-success"></i>
                            {% else %}
                                <i class="fas fa-times text-muted"></i>
                            {% endif %}
                        </td>
                        <td class="align-middle text-end">
                            <a href="{{ path('app_caisse_code_edit', {'id': code.id}) }}" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" action="{{ path('app_caisse_code_delete', {'id': code.id}) }}" style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ code.id) }}">
                                <button class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center py-4">Aucun code promo trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        {{ knp_pagination_render(codes) }}
    </div>
{% endblock %}
