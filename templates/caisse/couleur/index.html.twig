{% extends 'caisse/layout.html.twig' %}

{% block title %}Couleurs{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center gap-3">
            <h1 class="mb-0">Couleurs</h1>
            <form action="{{ path('app_caisse_couleur_index') }}" method="get" class="d-flex">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Rechercher...">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
        <a href="{{ path('app_caisse_couleur_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvelle couleur
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Nom</th>
                        <th>Aperçu</th>
                        <th>Code Hex</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for couleur in couleurs %}
                    <tr>
                        <td class="align-middle fw-bold">{{ couleur.nom }}</td>
                        <td class="align-middle">
                            <div style="width: 30px; height: 30px; background-color: {{ couleur.codeHex }}; border: 1px solid #ddd; border-radius: 4px;"></div>
                        </td>
                        <td class="align-middle">{{ couleur.codeHex }}</td>
                        <td class="align-middle text-end">
                            <a href="{{ path('app_caisse_couleur_edit', {'id': couleur.id}) }}" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" action="{{ path('app_caisse_couleur_delete', {'id': couleur.id}) }}" style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ couleur.id) }}">
                                <button class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center py-4">Aucune couleur trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        {{ knp_pagination_render(couleurs) }}
    </div>
{% endblock %}
