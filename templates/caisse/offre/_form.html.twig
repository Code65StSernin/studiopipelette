{{ form_start(form) }}
    <div class="row mb-3">
        <div class="col-md-6">
            {{ form_row(form.grandTexte) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.petitTexte) }}
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            {{ form_row(form.dateDebut) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.dateFin) }}
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            {{ form_row(form.texteBouton) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.lienBouton) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.imageFile) }}
        {{ form_widget(form.imageFile) }}
        {{ form_errors(form.imageFile) }}
        {% if offre.image is defined and offre.image %}
            <div class="mt-2">
                <p class="text-muted small mb-1">Image actuelle :</p>
                <img src="{{ asset('assets/img/offres/' ~ offre.image) }}" alt="AperÃ§u" class="img-thumbnail" style="max-height: 100px;">
            </div>
        {% endif %}
    </div>

    <div class="mb-4">
        <div class="form-check form-switch">
            {{ form_widget(form.imageGauche) }}
            {{ form_label(form.imageGauche) }}
        </div>
    </div>

    <div class="d-grid gap-2">
        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
    </div>
{{ form_end(form) }}
