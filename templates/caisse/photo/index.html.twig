{% extends 'caisse/layout.html.twig' %}

{% block title %}Photos{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center gap-3">
            <h1 class="mb-0">Photos</h1>
            <form action="{{ path('app_caisse_photo_index') }}" method="get" class="d-flex">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Rechercher..." value="{{ app.request.query.get('q') }}">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
        <a href="{{ path('app_caisse_photo_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvelle photo
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Aperçu</th>
                        <th>Article</th>
                        <th>Type</th>
                        <th>Fichier</th>
                        <th>Date d'ajout</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for photo in photos %}
                    <tr>
                        <td class="align-middle">
                            {% if photo.type == 'image' and photo.article %}
                                <img src="{{ asset('assets/img/articles/thumbnails/' ~ photo.article.id ~ '/' ~ photo.filename) }}" alt="Aperçu" style="max-height: 50px; max-width: 50px;" class="img-thumbnail">
                            {% elseif photo.type == 'video' %}
                                <i class="fas fa-video fa-2x text-secondary"></i>
                            {% else %}
                                <i class="fas fa-image fa-2x text-secondary"></i>
                            {% endif %}
                        </td>
                        <td class="align-middle">
                            {% if photo.article %}
                                {{ photo.article.nom }}
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td class="align-middle">
                            {% if photo.type == 'video' %}
                                <span class="badge bg-info">Vidéo</span>
                            {% else %}
                                <span class="badge bg-secondary">Image</span>
                            {% endif %}
                        </td>
                        <td class="align-middle text-break" style="max-width: 200px;">{{ photo.filename }}</td>
                        <td class="align-middle">{{ photo.createdAt ? photo.createdAt|date('d/m/Y H:i') : '' }}</td>
                        <td class="align-middle text-end">
                            <a href="{{ path('app_caisse_photo_edit', {'id': photo.id}) }}" class="btn btn-sm btn-outline-primary me-1" title="Modifier">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" action="{{ path('app_caisse_photo_delete', {'id': photo.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette photo ?');" style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ photo.id) }}">
                                <button class="btn btn-sm btn-outline-danger" title="Supprimer">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center py-4">Aucune photo trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="mt-3">
        {{ knp_pagination_render(photos) }}
    </div>
{% endblock %}
