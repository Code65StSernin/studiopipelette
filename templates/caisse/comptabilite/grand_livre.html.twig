{% extends 'caisse/layout.html.twig' %}

{% block title %}Grand Livre {{ year }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4 no-print">
        <div class="d-flex align-items-center gap-3">
            <h1 class="mb-0">Grand Livre</h1>
            <form action="{{ path('app_caisse_comptabilite_grand_livre') }}" method="get" class="d-flex align-items-center">
                <select name="year" class="form-select" onchange="this.form.submit()">
                    {% for y in (year-5)..(year+1) %}
                        <option value="{{ y }}" {% if y == year %}selected{% endif %}>{{ y }}</option>
                    {% endfor %}
                </select>
            </form>
        </div>
        <div>
            <button onclick="window.print()" class="btn btn-secondary me-2">
                <i class="fas fa-print"></i> Imprimer
            </button>
            <a href="{{ path('app_caisse_comptabilite_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <h4 class="mb-0 text-center">Grand Livre Comptable - Année {{ year }}</h4>
        </div>
        <div class="card-body p-0">
            <table class="table table-bordered table-sm mb-0">
                <thead class="bg-light">
                    <tr>
                        <th style="width: 10%">Date</th>
                        <th style="width: 10%">Type</th>
                        <th style="width: 35%">Libellé</th>
                        <th style="width: 15%" class="text-end">Débit</th>
                        <th style="width: 15%" class="text-end">Crédit</th>
                        <th style="width: 15%" class="text-end">Solde</th>
                    </tr>
                </thead>
                <tbody>
                {% for op in operations %}
                    <tr>
                        <td>{{ op.date ? op.date|date('d/m/Y') : '' }}</td>
                        <td>
                            {% if op.type == 'Recette' %}
                                <span class="badge bg-success-subtle text-success border border-success">{{ op.type }}</span>
                            {% else %}
                                <span class="badge bg-danger-subtle text-danger border border-danger">{{ op.type }}</span>
                            {% endif %}
                        </td>
                        <td>{{ op.libelle }}</td>
                        <td class="text-end text-danger">{% if op.debit > 0 %}-{{ op.debit|number_format(2, ',', ' ') }} €{% endif %}</td>
                        <td class="text-end text-success">{% if op.credit > 0 %}+{{ op.credit|number_format(2, ',', ' ') }} €{% endif %}</td>
                        <td class="text-end fw-bold {% if op.solde >= 0 %}text-success{% else %}text-danger{% endif %}">{{ op.solde|number_format(2, ',', ' ') }} €</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center py-4">Aucune opération trouvée pour {{ year }}</td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot class="fw-bold bg-light">
                    <tr>
                        <td colspan="3" class="text-end">TOTAUX {{ year }}</td>
                        <td class="text-end text-danger">{{ totalDebit|number_format(2, ',', ' ') }} €</td>
                        <td class="text-end text-success">{{ totalCredit|number_format(2, ',', ' ') }} €</td>
                        <td class="text-end {% if soldeFinal >= 0 %}text-success{% else %}text-danger{% endif %}">{{ soldeFinal|number_format(2, ',', ' ') }} €</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <style>
        @media print {
            .no-print { display: none !important; }
            .card { border: none !important; box-shadow: none !important; }
            .card-header { border-bottom: none !important; }
            .badge { border: 1px solid #000 !important; color: #000 !important; background: none !important; }
            @page {
                margin: 0;
            }
            body {
                padding: 1.5cm !important;
            }
        }
    </style>
{% endblock %}
