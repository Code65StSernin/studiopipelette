{% extends 'caisse/layout.html.twig' %}

{% block title %}Comptabilité{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Comptabilité</h1>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    <i class="fas fa-file-invoice-dollar fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Journal des Recettes</h5>
                    <p class="card-text text-muted">Consulter et imprimer le journal des recettes annuelles.</p>
                    <a href="{{ path('app_caisse_comptabilite_journal_recettes') }}" class="btn btn-outline-success mt-auto">Accéder</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    <i class="fas fa-file-invoice fa-3x text-danger mb-3"></i>
                    <h5 class="card-title">Journal des Dépenses</h5>
                    <p class="card-text text-muted">Consulter et imprimer le journal des dépenses annuelles.</p>
                    <a href="{{ path('app_caisse_comptabilite_journal_depenses') }}" class="btn btn-outline-danger mt-auto">Accéder</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    <i class="fas fa-book fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Grand Livre</h5>
                    <p class="card-text text-muted">Récapitulatif chronologique des recettes et dépenses.</p>
                    <a href="{{ path('app_caisse_comptabilite_grand_livre') }}" class="btn btn-outline-primary mt-auto">Accéder</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title mb-3">Saisie Rapide</h5>
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_caisse_recette_new') }}" class="btn btn-success">
                            <i class="fas fa-plus"></i> Nouvelle Recette
                        </a>
                        <a href="{{ path('app_caisse_depense_new') }}" class="btn btn-danger">
                            <i class="fas fa-plus"></i> Nouvelle Dépense
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title mb-3">Gestion</h5>
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_caisse_recette_index') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-list"></i> Gérer les Recettes
                        </a>
                        <a href="{{ path('app_caisse_depense_index') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-list"></i> Gérer les Dépenses
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
