{% extends 'caisse/layout.html.twig' %}

{% block title %}Journal des Recettes {{ year }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4 no-print">
        <div class="d-flex align-items-center gap-3">
            <h1 class="mb-0">Journal des Recettes</h1>
            <form action="{{ path('app_caisse_comptabilite_journal_recettes') }}" method="get" class="d-flex align-items-center">
                <select name="year" class="form-select" onchange="this.form.submit()">
                    {% for y in (year-5)..(year+1) %}
                        <option value="{{ y }}" {% if y == year %}selected{% endif %}>{{ y }}</option>
                    {% endfor %}
                </select>
            </form>
        </div>
        <div>
            <button onclick="window.print()" class="btn btn-secondary me-2">
                <i class="fas fa-print"></i> Imprimer
            </button>
            <a href="{{ path('app_caisse_comptabilite_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <h4 class="mb-0 text-center">Journal des Recettes - Année {{ year }}</h4>
        </div>
        <div class="card-body p-0">
            <table class="table table-bordered table-striped mb-0">
                <thead class="bg-light">
                    <tr>
                        <th style="width: 15%">Date</th>
                        <th style="width: 60%">Libellé</th>
                        <th style="width: 25%" class="text-end">Montant</th>
                    </tr>
                </thead>
                <tbody>
                {% for recette in recettes %}
                    <tr>
                        <td>{{ recette.date ? recette.date|date('d/m/Y') : '' }}</td>
                        <td>{{ recette.objet }}</td>
                        <td class="text-end">{{ recette.montant|number_format(2, ',', ' ') }} €</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center py-4">Aucune recette trouvée pour {{ year }}</td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot class="fw-bold bg-light">
                    <tr>
                        <td colspan="2" class="text-end">TOTAL RECETTES {{ year }}</td>
                        <td class="text-end">{{ total|number_format(2, ',', ' ') }} €</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <style>
        @media print {
            .no-print { display: none !important; }
            .card { border: none !important; box-shadow: none !important; }
            .card-header { border-bottom: none !important; }
            /* Hide browser default header/footer by removing page margins */
            @page {
                margin: 0;
            }
            body {
                padding: 1.5cm !important;
            }
        }
    </style>
{% endblock %}
