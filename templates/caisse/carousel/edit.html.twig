{% extends 'caisse/layout.html.twig' %}

{% block title %}Modifier le slide{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Modifier le slide</h1>
        <a href="{{ path('app_caisse_carousel_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">{{ form_row(form.grandTitre) }}</div>
                    <div class="col-md-6">{{ form_row(form.petitTitre) }}</div>
                </div>
                <div class="row">
                    <div class="col-md-6">{{ form_row(form.texteBouton) }}</div>
                    <div class="col-md-6">{{ form_row(form.lienBouton) }}</div>
                </div>
                <div class="row">
                    <div class="col-md-6">{{ form_row(form.dateDebut) }}</div>
                    <div class="col-md-6">{{ form_row(form.dateFin) }}</div>
                </div>
                
                <div class="mb-3">
                    {% if carousel.image %}
                        <div class="mb-2">
                            <label class="form-label d-block">Image actuelle</label>
                            <img src="{{ asset('assets/img/carousel/' ~ carousel.image) }}" alt="Slide" class="img-thumbnail" style="max-height: 150px;">
                        </div>
                    {% endif %}
                    {{ form_row(form.imageFile) }}
                </div>
                
                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
