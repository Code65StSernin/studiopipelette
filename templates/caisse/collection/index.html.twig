{% extends 'caisse/layout.html.twig' %}

{% block title %}Collections{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center gap-3">
            <h1 class="mb-0">Collections</h1>
            <form action="{{ path('app_caisse_collection_index') }}" method="get" class="d-flex">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Rechercher...">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
        <a href="{{ path('app_caisse_collection_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvelle collection
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Nom</th>
                        <th>Couleurs associées</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for collection in collections %}
                    <tr>
                        <td class="align-middle fw-bold">{{ collection.nom }}</td>
                        <td class="align-middle">
                            {% for couleur in collection.couleurs %}
                                <span class="badge" style="background-color: {{ couleur.codeHex }}; color: #fff; text-shadow: 0 0 2px #000;">{{ couleur.nom }}</span>
                            {% else %}
                                <span class="text-muted">Aucune</span>
                            {% endfor %}
                        </td>
                        <td class="align-middle text-end">
                            <a href="{{ path('app_caisse_collection_edit', {'id': collection.id}) }}" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" action="{{ path('app_caisse_collection_delete', {'id': collection.id}) }}" style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ collection.id) }}">
                                <button class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center py-4">Aucune collection trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        {{ knp_pagination_render(collections) }}
    </div>
{% endblock %}
