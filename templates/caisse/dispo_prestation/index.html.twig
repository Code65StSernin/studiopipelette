{% extends 'caisse/layout.html.twig' %}

{% block title %}Exceptions{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center gap-3">
            <h1 class="mb-0">Exceptions</h1>
            <form action="{{ path('app_caisse_dispo_prestation_index') }}" method="get" class="d-flex">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Rechercher..." value="{{ app.request.query.get('q') }}">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
        <a href="{{ path('app_caisse_dispo_prestation_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvelle exception
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Motif</th>
                        <th>Période</th>
                        <th>Prestations concernées</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for dispo in dispo_prestations %}
                    <tr>
                        <td class="align-middle fw-bold">{{ dispo.motif }}</td>
                        <td class="align-middle">
                            {{ dispo.dateDebut|date('d/m/Y') }} - {{ dispo.dateFin|date('d/m/Y') }}
                        </td>
                        <td class="align-middle">
                            {% for tarif in dispo.Tarif %}
                                <span class="badge bg-info text-dark">{{ tarif.nom }}</span>
                            {% else %}
                                <span class="text-muted">Toutes</span>
                            {% endfor %}
                        </td>
                        <td class="align-middle text-end">
                            <a href="{{ path('app_caisse_dispo_prestation_edit', {'id': dispo.id}) }}" class="btn btn-sm btn-outline-primary me-1" title="Modifier">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" action="{{ path('app_caisse_dispo_prestation_delete', {'id': dispo.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette exception ?');" style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dispo.id) }}">
                                <button class="btn btn-sm btn-outline-danger" title="Supprimer">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center py-4">Aucune exception trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="card-footer d-flex justify-content-center">
            {{ knp_pagination_render(dispo_prestations) }}
        </div>
    </div>
{% endblock %}
