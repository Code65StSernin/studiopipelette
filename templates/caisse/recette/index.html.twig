{% extends 'caisse/layout.html.twig' %}

{% block title %}Recettes{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Recettes</h1>
        <a href="{{ path('app_caisse_recette_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvelle recette
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Date</th>
                        <th>Objet</th>
                        <th>Montant</th>
                        <th>Pointage</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for recette in recettes %}
                    <tr>
                        <td class="align-middle">{{ recette.date ? recette.date|date('d/m/Y') : '' }}</td>
                        <td class="align-middle">{{ recette.objet }}</td>
                        <td class="align-middle">{{ recette.montant|number_format(2, ',', ' ') }} €</td>
                        <td class="align-middle">
                            {% if recette.pointage %}
                                <span class="badge bg-success">Oui</span>
                            {% else %}
                                <span class="badge bg-secondary">Non</span>
                            {% endif %}
                        </td>
                        <td class="align-middle text-end">
                            <a href="{{ path('app_caisse_recette_edit', {'id': recette.id}) }}" class="btn btn-sm btn-outline-primary me-1">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" action="{{ path('app_caisse_recette_delete', {'id': recette.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette recette ?');" style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recette.id) }}">
                                <button class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center py-4">Aucune recette trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="mt-3">
        {{ knp_pagination_render(recettes) }}
    </div>
{% endblock %}
