{{ form_start(form) }}
    <div class="row">
        <!-- Informations Personnelles -->
        <div class="col-md-8">
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user"></i> Informations Personnelles</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.nom) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.prenom) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.telephone) }}
                        </div>
                    </div>
                    <div class="mt-3">
                        {{ form_row(form.image) }}
                    </div>
                </div>
            </div>

            <!-- Fiche Client (Notes) -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-sticky-note"></i> Notes / Fiche Client</h5>
                </div>
                <div class="card-body">
                    {{ form_row(form.fiche) }}
                </div>
            </div>
        </div>

        <!-- Sidebar : Paramètres & Fidélité -->
        <div class="col-md-4">
            <!-- Paramètres -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-cogs"></i> Paramètres</h5>
                </div>
                <div class="card-body">
                    {{ form_row(form.btoB) }}
                    {{ form_row(form.depotVente) }}
                    <hr>
                    <div class="form-check form-switch mb-2">
                        {{ form_widget(form.clientDepotVente, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(form.clientDepotVente, null, {'label_attr': {'class': 'form-check-label'}}) }}
                    </div>
                    <div class="form-check form-switch mb-2">
                        {{ form_widget(form.isVerified, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(form.isVerified, null, {'label_attr': {'class': 'form-check-label'}}) }}
                    </div>
                    <div class="form-check form-switch">
                        {{ form_widget(form.canBookOnline, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(form.canBookOnline, null, {'label_attr': {'class': 'form-check-label'}}) }}
                    </div>
                    <hr>
                    <div class="mb-3">
                        {{ form_label(form.roles, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        <div class="d-flex flex-wrap gap-3">
                            {% for child in form.roles %}
                                <div class="form-check">
                                    {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(child, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Fidélité -->
            <div class="card mb-4 shadow-sm border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-gift"></i> Fidélité</h5>
                </div>
                <div class="card-body">
                    {{ form_row(form.fideliteCagnotte) }}
                    <div class="row">
                        <div class="col-6">
                            {{ form_row(form.fidelitePoints) }}
                        </div>
                        <div class="col-6">
                            {{ form_row(form.fideliteVisits) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end mb-5">
        <a href="{{ path('app_client_index') }}" class="btn btn-secondary me-md-2">Annuler</a>
        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
    </div>
{{ form_end(form) }}

<!-- Summernote CSS/JS -->
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
<script>
    $(document).ready(function() {
        $('.wysiwyg-editor').summernote({
            placeholder: 'Notes sur le client...',
            tabsize: 2,
            height: 300, // ~10 lines
            width: '100%',
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link']],
                ['view', ['fullscreen', 'codeview', 'help']]
            ],
            callbacks: {
                onInit: function() {
                    // Ensure it takes full width
                    $('.note-editor').css('width', '100%');
                }
            }
        });
    });
</script>