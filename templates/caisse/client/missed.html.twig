{% extends 'caisse/layout.html.twig' %}

{% block title %}Rendez-vous non honorés - {{ client.nom }} {{ client.prenom }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0">Rendez-vous non honorés</h1>
            <p class="text-muted lead">{{ client.nom }} {{ client.prenom }} ({{ client.email }})</p>
        </div>
        <a href="{{ path('app_client_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour aux clients
        </a>
    </div>

    <div class="card shadow-sm border-warning">
        <div class="card-header bg-warning text-white">
            <i class="fas fa-exclamation-triangle me-2"></i> Liste des rendez-vous marqués comme non honorés
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Date</th>
                        <th>Heure</th>
                        <th>Prestations</th>
                        <th>Statut</th>
                    </tr>
                </thead>
                <tbody>
                {% for res in reservations %}
                    <tr>
                        <td class="align-middle fw-bold">
                            {{ res.dateStart|date('d/m/Y') }}
                        </td>
                        <td class="align-middle">
                            {{ res.dateStart|date('H:i') }} - {{ res.dateEnd|date('H:i') }}
                        </td>
                        <td class="align-middle">
                            {% set prestationsNames = [] %}
                            {% for tarif in res.prestations %}
                                {% set prestationsNames = prestationsNames|merge([tarif.nom]) %}
                            {% endfor %}
                            {{ prestationsNames|join(', ') }}
                        </td>
                        <td class="align-middle">
                            <span class="badge bg-warning text-dark">Non honoré</span>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center py-4">Aucun rendez-vous non honoré trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="mt-3">
        {{ knp_pagination_render(reservations) }}
    </div>
{% endblock %}
