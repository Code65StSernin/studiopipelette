{% extends 'caisse/layout.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center gap-3">
            <h1 class="mb-0">Clients</h1>
            <form action="{{ path('app_client_index') }}" method="get" class="d-flex">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Rechercher..." value="{{ app.request.query.get('q') }}">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
        <a href="{{ path('app_client_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouveau client
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Email</th>
                        <th>Téléphone</th>
                        <th>Date de création</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for client in clients %}
                    <tr>
                        <td class="align-middle fw-bold">
                            <a href="{{ path('app_client_show', {'id': client.id}) }}" class="text-decoration-none text-dark">
                                {{ client.nom }}
                            </a>
                        </td>
                        <td class="align-middle">
                            <a href="{{ path('app_client_show', {'id': client.id}) }}" class="text-decoration-none text-dark">
                                {{ client.prenom }}
                            </a>
                        </td>
                        <td class="align-middle">{{ client.email }}</td>
                        <td class="align-middle">{{ client.telephone }}</td>
                        <td class="align-middle">{{ client.createdAt ? client.createdAt|date('d/m/Y H:i') : '' }}</td>
                        <td class="align-middle text-end">
                            {% set missedCount = missedMap[client.email]|default(0) %}
                            {% if missedCount > 0 %}
                                <a href="{{ path('app_client_missed', {'id': client.id}) }}" class="btn btn-sm btn-outline-warning me-1 d-inline-flex align-items-center" title="{{ missedCount }} rendez-vous non honorés">
                                    <img src="{{ asset('assets/img/lapin.png') }}" alt="Lapin" style="width: 20px; height: 20px; vertical-align: middle; margin-right: 4px;">
                                    <span class="badge bg-danger rounded-pill">{{ missedCount }}</span>
                                </a>
                            {% else %}
                                <button class="btn btn-sm btn-outline-secondary me-1 d-inline-flex align-items-center" title="Aucun rendez-vous non honoré" disabled>
                                    <img src="{{ asset('assets/img/lapin.png') }}" alt="Lapin" style="width: 20px; height: 20px; vertical-align: middle; opacity: 0.5;">
                                </button>
                            {% endif %}
                            <a href="{{ path('app_client_show', {'id': client.id}) }}" class="btn btn-sm btn-outline-info me-1">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-sm btn-outline-primary me-1">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" action="{{ path('app_client_delete', {'id': client.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce client ?');" style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
                                <button class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center py-4">Aucun client trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="mt-3">
        {{ knp_pagination_render(clients) }}
    </div>
{% endblock %}
