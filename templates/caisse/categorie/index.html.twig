{% extends 'caisse/layout.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Catégories de vente</h1>
        <a href="{{ path('categorie_vente_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvelle catégorie
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Visuel</th>
                        <th>Nom</th>
                        <th>Type</th>
                        <th>Date de création</th>
                        <th>Date de modification</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for categorie in categorie_ventes %}
                    <tr>
                        <td>
                            {% if categorie.image %}
                                <img src="{{ asset('uploads/images/categories/' ~ categorie.image) }}" alt="{{ categorie.nom }}" width="50" height="50" class="rounded">
                            {% elseif categorie.couleur %}
                                <div style="width: 50px; height: 50px; background-color: {{ categorie.couleur }}; border-radius: 4px;"></div>
                            {% else %}
                                <span class="text-muted">Aucun</span>
                            {% endif %}
                        </td>
                        <td class="align-middle fw-bold">{{ categorie.nom }}</td>
                        <td class="align-middle">
                            {% if categorie.prestation %}
                                <span class="badge bg-info text-dark">Prestation</span>
                            {% else %}
                                <span class="badge bg-secondary">Vente</span>
                            {% endif %}
                        </td>
                        <td class="align-middle">{{ categorie.createdAt ? categorie.createdAt|date('d/m/Y H:i') : '' }}</td>
                        <td class="align-middle">{{ categorie.updatedAt ? categorie.updatedAt|date('d/m/Y H:i') : '' }}</td>
                        <td class="align-middle text-end">
                            <a href="{{ path('categorie_vente_edit', {'id': categorie.id}) }}" class="btn btn-sm btn-outline-primary me-1">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" action="{{ path('categorie_vente_delete', {'id': categorie.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');" style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie.id) }}">
                                <button class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center py-4">Aucune catégorie trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
