{{ form_start(form) }}
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="mb-3">
                        {{ form_row(form.nom) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.prestation) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">Visuel</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Type de visuel</label>
                        <div class="d-flex gap-3">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="visuelType" id="visuelImage" value="image" {% if form.vars.value.image %}checked{% endif %}>
                                <label class="form-check-label" for="visuelImage">Image</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="visuelType" id="visuelCouleur" value="couleur" {% if not form.vars.value.image %}checked{% endif %}>
                                <label class="form-check-label" for="visuelCouleur">Couleur</label>
                            </div>
                        </div>
                    </div>

                    <div id="imageSection" class="mb-3 {% if not form.vars.value.image %}d-none{% endif %}">
                        {{ form_row(form.imageFile) }}
                        {% if form.vars.value.image %}
                            <div class="mt-2">
                                <img src="{{ asset('assets/categories/' ~ form.vars.value.image) }}" alt="AperÃ§u" class="img-thumbnail" style="max-height: 150px;">
                            </div>
                        {% endif %}
                    </div>

                    <div id="couleurSection" class="mb-3 {% if form.vars.value.image %}d-none{% endif %}">
                        {{ form_row(form.couleur) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end gap-2">
        <a href="{{ path('categorie_vente_index') }}" class="btn btn-secondary">Annuler</a>
        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
    </div>
{{ form_end(form) }}

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const radioImage = document.getElementById('visuelImage');
        const radioCouleur = document.getElementById('visuelCouleur');
        const imageSection = document.getElementById('imageSection');
        const couleurSection = document.getElementById('couleurSection');

        function toggleSections() {
            if (radioImage.checked) {
                imageSection.classList.remove('d-none');
                couleurSection.classList.add('d-none');
            } else {
                imageSection.classList.add('d-none');
                couleurSection.classList.remove('d-none');
            }
        }

        radioImage.addEventListener('change', toggleSections);
        radioCouleur.addEventListener('change', toggleSections);
        
        // Initial state
        if (!radioImage.checked && !radioCouleur.checked) {
            radioCouleur.checked = true;
        }
        toggleSections();
    });
</script>
