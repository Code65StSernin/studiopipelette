{% extends 'caisse/layout.html.twig' %}

{% block title %}Sous-Catégories{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Sous-catégories de vente</h1>
        <a href="{{ path('sous_categorie_vente_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvelle sous-catégorie
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Visuel</th>
                        <th>Nom</th>
                        <th>Catégorie Parente</th>
                        <th>Date de création</th>
                        <th>Date de modification</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for sous_categorie in sous_categorie_ventes %}
                    <tr>
                        <td>
                            {% if sous_categorie.image %}
                                <img src="{{ asset('uploads/images/sous_categories/' ~ sous_categorie.image) }}" alt="{{ sous_categorie.nom }}" width="50" height="50" class="rounded">
                            {% elseif sous_categorie.couleur %}
                                <div style="width: 50px; height: 50px; background-color: {{ sous_categorie.couleur }}; border-radius: 4px;"></div>
                            {% else %}
                                <span class="text-muted">Aucun</span>
                            {% endif %}
                        </td>
                        <td class="align-middle fw-bold">{{ sous_categorie.nom }}</td>
                        <td class="align-middle">
                            <span class="badge bg-secondary">{{ sous_categorie.categorie ? sous_categorie.categorie.nom : 'Non défini' }}</span>
                        </td>
                        <td class="align-middle">{{ sous_categorie.createdAt ? sous_categorie.createdAt|date('d/m/Y H:i') : '' }}</td>
                        <td class="align-middle">{{ sous_categorie.updatedAt ? sous_categorie.updatedAt|date('d/m/Y H:i') : '' }}</td>
                        <td class="align-middle text-end">
                            <a href="{{ path('sous_categorie_vente_edit', {'id': sous_categorie.id}) }}" class="btn btn-sm btn-outline-primary me-1">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" action="{{ path('sous_categorie_vente_delete', {'id': sous_categorie.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette sous-catégorie ?');" style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sous_categorie.id) }}">
                                <button class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center py-4">Aucune sous-catégorie trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
