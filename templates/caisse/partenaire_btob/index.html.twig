{% extends 'caisse/layout.html.twig' %}

{% block title %}Partenaires BtoB{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center gap-3">
            <h1 class="mb-0">Partenaires BtoB</h1>
            <form action="{{ path('app_caisse_partenaire_btob_index') }}" method="get" class="d-flex">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Rechercher..." value="{{ app.request.query.get('q') }}">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
        <a href="{{ path('app_caisse_partenaire_btob_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouveau partenaire
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Nom</th>
                        <th>Remise par catégorie</th>
                        <th>Catégories concernées</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for partenaire in partenaires %}
                    <tr>
                        <td class="align-middle fw-bold">{{ partenaire.nom }}</td>
                        <td class="align-middle">{{ partenaire.remiseParCategorie }}%</td>
                        <td class="align-middle">
                            {% for categorie in partenaire.categories %}
                                <span class="badge bg-secondary">{{ categorie.nom }}</span>
                            {% else %}
                                <span class="text-muted">Aucune</span>
                            {% endfor %}
                        </td>
                        <td class="align-middle text-end">
                            <a href="{{ path('app_caisse_partenaire_btob_edit', {'id': partenaire.id}) }}" class="btn btn-sm btn-outline-primary me-1" title="Modifier">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" action="{{ path('app_caisse_partenaire_btob_delete', {'id': partenaire.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce partenaire ?');" style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ partenaire.id) }}">
                                <button class="btn btn-sm btn-outline-danger" title="Supprimer">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center py-4">Aucun partenaire BtoB trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="card-footer d-flex justify-content-center">
            {{ knp_pagination_render(partenaires) }}
        </div>
    </div>
{% endblock %}
