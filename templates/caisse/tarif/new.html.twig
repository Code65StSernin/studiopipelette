{% extends 'caisse/layout.html.twig' %}

{% block title %}Nouveau tarif{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Nouveau tarif</h1>
        <a href="{{ path('app_caisse_tarif_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            {{ form_start(form) }}
                {{ form_row(form.nom) }}
                <div class="row">
                    <div class="col-md-6">{{ form_row(form.tarif) }}</div>
                    <div class="col-md-6">{{ form_row(form.dureeMinutes) }}</div>
                </div>
                <div class="row">
                    <div class="col-md-6">{{ form_row(form.categorieVente) }}</div>
                    <div class="col-md-6">{{ form_row(form.sousCategorieVente) }}</div>
                </div>
                {{ form_row(form.image) }}
                
                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
