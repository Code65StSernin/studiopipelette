{% extends 'caisse/layout.html.twig' %}

{% block title %}Tarifs{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center gap-3">
            <h1 class="mb-0">Tarifs (Prestations)</h1>
            <form action="{{ path('app_caisse_tarif_index') }}" method="get" class="d-flex">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Rechercher...">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
        <a href="{{ path('app_caisse_tarif_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouveau tarif
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Durée</th>
                        <th>Catégorie</th>
                        <th>Sous-catégorie</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for tarif in tarifs %}
                    <tr>
                        <td class="align-middle fw-bold">{{ tarif.nom }}</td>
                        <td class="align-middle">{{ tarif.tarif }} €</td>
                        <td class="align-middle">{{ tarif.dureeMinutes }} min</td>
                        <td class="align-middle">{{ tarif.categorieVente ? tarif.categorieVente.nom : '-' }}</td>
                        <td class="align-middle">{{ tarif.sousCategorieVente ? tarif.sousCategorieVente.nom : '-' }}</td>
                        <td class="align-middle text-end">
                            <a href="{{ path('app_caisse_tarif_edit', {'id': tarif.id}) }}" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" action="{{ path('app_caisse_tarif_delete', {'id': tarif.id}) }}" style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tarif.id) }}">
                                <button class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center py-4">Aucun tarif trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        {{ knp_pagination_render(tarifs) }}
    </div>
{% endblock %}
