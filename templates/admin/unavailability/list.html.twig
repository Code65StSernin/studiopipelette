{% extends 'base.html.twig' %}

{% block title %}Règles d'indisponibilité{% endblock %}

{% block content_right %}
    <style>
        .table thead th {
            background-color: #a16877;
            color: white;
            border: none;
        }
        .btn-primary-custom {
            background-color: #d3573b;
            border-color: #d3573b;
            color: white;
        }
        .btn-primary-custom:hover {
            background-color: #b04630;
            border-color: #b04630;
            color: white;
        }
        .btn-secondary-custom {
            background-color: #a16877;
            border-color: #a16877;
            color: white;
        }
        .btn-secondary-custom:hover {
            background-color: #8c5a66;
            border-color: #8c5a66;
            color: white;
        }
        .section-title {
            color: #d4807e;
            border-bottom: 2px solid #d4807e;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }
    </style>
    <div class="container mt-4">
        <h1 class="section-title">Règles d'indisponibilité</h1>
        <p><a href="{{ path('admin_unavailability_create') }}" class="btn btn-primary-custom">Créer une règle</a></p>
        <table class="table table-striped">
            <thead>
                <tr><th>Nom</th><th>Active</th><th>Actions</th></tr>
            </thead>
            <tbody>
                {% for r in rules %}
                    <tr>
                        <td>{{ r.name }}</td>
                        <td>{{ r.active ? 'Oui' : 'Non' }}</td>
                        <td>
                            <a href="{{ path('admin_unavailability_edit', {'id': r.id}) }}" class="btn btn-sm btn-secondary-custom">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="3">Aucune règle définie.</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

