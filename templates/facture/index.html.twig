{% extends 'base.html.twig' %}

{% block title %}Mes Factures - Studio Pipelette{% endblock %}

{% block content_right %}
    <!-- Page Header intégré dans la colonne de droite -->
    <div class="bg-secondary mb-4 p-4">
        <div class="d-flex flex-column">
            <h3 class="font-weight-semi-bold text-uppercase mb-2">Mes Factures</h3>
            <nav class="d-inline-flex">
                <a href="{{ path('app_home') }}" class="text-dark">Accueil</a>
                <span class="mx-2">-</span>
                <span class="text-dark">Factures</span>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            {% if factures is empty %}
                <!-- Aucune facture -->
                <div class="card border-secondary mb-5">
                    <div class="card-body text-center py-5">
                        <i class="fa fa-file-invoice fa-5x text-secondary mb-4"></i>
                        <h3 class="mb-4">Aucune facture trouvée</h3>
                        <p class="text-muted mb-4">Vous n'avez pas encore passé de commande</p>
                        <a href="{{ path('app_boutique') }}" class="btn btn-primary py-2 px-4">
                            <i class="fa fa-shopping-bag mr-2"></i>Commencer mes achats
                        </a>
                    </div>
                </div>
            {% else %}
                <!-- Liste des factures -->
                <div class="card border-secondary mb-5">
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0">Historique de vos factures</h4>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="border-0">N° Facture</th>
                                        <th class="border-0">Date</th>
                                        <th class="border-0">Total TTC</th>
                                        <th class="border-0">Mode de livraison</th>
                                        <th class="border-0 text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for facture in factures %}
                                        <tr>
                                            <td class="align-middle">
                                                <strong>{{ facture.numero }}</strong>
                                            </td>
                                            <td class="align-middle">
                                                {{ facture.dateCreation|date('d/m/Y H:i') }}
                                            </td>
                                            <td class="align-middle">
                                                <strong>{{ (facture.totalTTC / 100)|number_format(2, ',', ' ') }} €</strong>
                                            </td>
                                            <td class="align-middle">
                                                <span class="badge badge-primary">
                                                    {% if facture.modeLivraison == 'domicile' %}
                                                        À domicile (+{{ (facture.fraisLivraison / 100)|number_format(2, ',', ' ') }} €)
                                                    {% else %}
                                                        Point relais
                                                    {% endif %}
                                                </span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <button class="btn btn-sm btn-outline-primary" onclick="showFactureDetails({{ facture.id }})">
                                                    <i class="fa fa-eye mr-1"></i>Détails
                                                </button>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                {% if totalPages > 1 %}
                    <nav>
                        <ul class="pagination justify-content-center mb-4">
                            <li class="page-item {% if currentPage <= 1 %}disabled{% endif %}">
                                <a class="page-link" href="{{ path('app_factures', {'page': currentPage - 1}) }}" tabindex="-1">Précédent</a>
                            </li>
                            {% for p in 1..totalPages %}
                                <li class="page-item {% if p == currentPage %}active{% endif %}">
                                    <a class="page-link" href="{{ path('app_factures', {'page': p}) }}">{{ p }}</a>
                                </li>
                            {% endfor %}
                            <li class="page-item {% if currentPage >= totalPages %}disabled{% endif %}">
                                <a class="page-link" href="{{ path('app_factures', {'page': currentPage + 1}) }}">Suivant</a>
                            </li>
                        </ul>
                    </nav>
                {% endif %}
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block body %}
<!-- Modal pour les détails de facture -->
<div class="modal fade" id="factureModal" tabindex="-1" role="dialog" aria-labelledby="factureModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document" style="max-height: 75vh;">
        <div class="modal-content" style="max-height: 75vh;">
            <div class="modal-header">
                <h5 class="modal-title" id="factureModalLabel">Détails de la facture</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="factureDetails" style="max-height: calc(75vh - 120px); overflow-y: auto;">
                <!-- Les détails seront chargés ici via AJAX -->
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="sr-only">Chargement...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
function showFactureDetails(factureId) {
    $('#factureModal').modal('show');

    // Afficher le spinner de chargement
    $('#factureDetails').html(`
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="sr-only">Chargement...</span>
            </div>
            <p class="mt-2">Chargement des détails...</p>
        </div>
    `);

    // Charger les détails via AJAX
    $.ajax({
        url: '{{ path('app_facture_details', {'id': 'FACTURE_ID'}) }}'.replace('FACTURE_ID', factureId),
        type: 'GET',
        success: function(data) {
            $('#factureDetails').html(data);
        },
        error: function(xhr, status, error) {
            $('#factureDetails').html(`
                <div class="alert alert-danger">
                    <i class="fa fa-exclamation-triangle mr-2"></i>
                    Erreur lors du chargement des détails de la facture.
                    <br>
                    <small>Code erreur: ${xhr.status}</small>
                </div>
            `);
        }
    });
}
</script>
{% endblock %}